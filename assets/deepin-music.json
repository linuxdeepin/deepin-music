{
    "appid": "deepin-music",
    "exec": "/usr/bin/deepin-music",
    "functions": [
        {
            "name": "playOneSong",
            "description": "播放某首歌曲",
            "parameters": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "歌曲名称"
                    },
                    "singer": {
                        "type": "string",
                        "description": "歌手名称"
                    },
                    "album": {
                        "type": "string",
                        "description": "专辑名称"
                    },
                    "songList": {
                        "type": "string",
                        "description": "歌单名称，例如：播放某个歌单的歌曲"
                    },
                    "index": {
                        "type": "string",
                        "description": "歌曲下标"
                    }
                },
                "required": []
            }
        },
        {
            "name": "stateControl",
            "description": "状态切换",
            "parameters": {
                "type": "object",
                "properties": {
                    "control": {
                        "type": "string",
                        "description": "Play继续,Pause暂停,Stop停止,Previous上一首,Next下一首,ListLoop列表循环,SingleLoop单曲循环,Shuffle随机播放",
                        "enum": ["Play", "Pause", "Stop", "Previous", "Next", "ListLoop", "SingleLoop", "Shuffle"]
                    }
                }
            }
        },
        {
            "name": "seek",
            "description": "快进/快退",
            "parameters": {
                "type": "object",
                "properties": {
                    "position": {
                        "type": "string",
                        "description": "快进、快退到.."
                    }
                }
            }
        },
        {
            "name": "playMyFavorite",
            "description": "播放我收藏的音乐",
            "parameters": {
                "type": "object",
                "properties": {
                }
            }
        },
        {
            "name": "addRemoveFavorite",
            "description": "收藏或取消收藏歌曲",
            "parameters": {
                "type": "object",
                "properties": {
                    "addFavorite": {
                        "type": "string",
                        "description": "收藏歌曲、添加到收藏"
                    },
                    "removeFavorite": {
                        "type": "string",
                        "description": "取消收藏、从我的收藏移除歌曲"
                    }
                }
            }
        }

    ]
}
